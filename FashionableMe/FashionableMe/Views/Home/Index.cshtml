@{
    ViewBag.Title = "Fashionable ME";
}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>               
            </hgroup>

        </div>
    </section>
}

@if (@ViewBag.OfferTitle == "none")
{
    <div style="width:auto;height:400px;text-align:center ; border: 10px dashed red; padding :inherit; background-color:burlywood">
    <h1 style="color:red">Offer of the Day!!!</h1>
    <table style="align-self:center">
        <tr>
            <td>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td><td ><h1 style="align-items:center">No Offers Today!!! Visit again soon to find exciting offers!</h1></td> 
        </tr>
        
    </table>
</div>
}
else{
<div style="width:auto;height:400px;text-align:center ; border: 10px dashed red; padding :inherit; background-color:lightsalmon ">
    <h1 style="color:red">Offer of the Day!!!</h1>
    <table style="align-self:center" class="table">
        <tr>
            <td><h1 style="color:dodgerblue">2Day's Offer</h1></td>
            <td ><h1>@ViewBag.OfferTitle</h1></td>
        </tr>
        <tr>
            <td><h1 style="color:dodgerblue">Offer Description</h1></td>
            <td ><h1>@ViewBag.OfferDescription</h1></td>
        </tr>
        <tr>
            <td></td>
            <td><h2>@Html.ActionLink("View Offer Details", "OfferOfDay","Customer")</h2></td>
        </tr>
    </table>
</div>
}
<br />
<br />

