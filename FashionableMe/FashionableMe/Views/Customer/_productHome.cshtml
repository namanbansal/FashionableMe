            <input type="button" value="View Details" onclick="showDetails('@(item.ApparelID)    ', '@(item.ApparelName)    ', '@(item.BrandName)    ', '@(item.Description)    ', '@(item.ApparelImage) ')" />
            
            @* @Html.ActionLink("View Details", "Details", new { id=item.ApparelID }) |*@
