@model List<FashionableMe.Models.Apparel> 


@{
    WebGrid grid = new WebGrid(Model, canPage: true, rowsPerPage: 10,
    selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
    FashionableMe.Models.Apparel apparel = new FashionableMe.Models.Apparel();
}
 <div id="gridContent">
            
     
@grid.GetHtml(tableStyle: "table",mode: WebGridPagerModes.All,
    columns:
    grid.Columns(
        
    grid.Column("",header:null, format:  @<input type="button" value="Select" onclick="testfun(grid.selectedRow)"/>),
        grid.Column("ApparelID", "Apparel ID"),
        grid.Column("ApparelName", "Apparel Name"),
        grid.Column("ApparelSize", "Apparel Size" ),
        grid.Column("BrandName", "Brand Name"),
        grid.Column("Description","Description"),
        grid.Column("ApparelCost", "Apparel Cost"),
        grid.Column("ApparelDiscount", "Apparel Discount")
        
        )
       )
     
 </div>

