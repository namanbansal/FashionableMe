@model FashionableMe.Models.LoginModel

@{
    ViewBag.Title = "Registered User Sign In To Your Account";
}
<h3 align="right"> @Html.ActionLink("Visit Site", "OfferOfDay", "Home")</h3>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    

</hgroup>

<section id="loginForm">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        
        <ol>
            <li>
                @Html.LabelFor(m => m.UserID)
                @Html.TextBoxFor(m => m.UserID)
                @Html.ValidationMessageFor(m => m.UserID)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            
        </ol>
        <input type="submit" value="Log in" />
    </fieldset>
    <p>
        New User &nbsp&nbsp&nbsp&nbsp<input type="submit" value="Create Your Account" onclick="location.href= '@Url.Action("Register", "Account")' " />
        
    </p>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
